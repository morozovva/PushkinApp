<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_main">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/expo_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:layout_constraintTop_toBottomOf="@id/expo_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:paddingTop="35dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="65dp"
            android:fillViewport="true"
            tools:context=".expo" />

        <FrameLayout
            android:id="@+id/expo_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/blue_main"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/back_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Экспозиция"
                android:background="@color/blue_main"
                android:textSize="20dp"
                android:layout_marginLeft="65dp"
                android:layout_gravity="center_vertical"
                android:textFontWeight="500"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark_main" />

            <Button
                android:id="@+id/scan_qr"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                android:background="@drawable/qr_button_layers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="QR-код"
                android:background="@color/blue_main"
                android:textSize="12dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="48dp"
                android:layout_gravity="right"
                android:textFontWeight="500"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark_main" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>